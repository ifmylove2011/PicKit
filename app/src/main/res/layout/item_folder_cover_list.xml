<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="folder"
            type="com.xter.pickit.entity.LocalMediaFolder" />

        <variable
            name="photoVM"
            type="com.xter.pickit.ui.album.PhotoAlbumViewModel" />
    </data>

    <RelativeLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_folder_cover"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/img_desc_cover"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_folder_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/iv_folder_cover"
            android:layout_alignBottom="@id/iv_folder_cover"
            android:text="@{String.valueOf(folder.imageNum)}"
            android:textColor="@color/purple" />

        <TextView
            android:id="@+id/tv_folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_folder_count"
            android:layout_toEndOf="@id/iv_folder_cover"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{folder.name}"
            android:textColor="@color/purple" />
    </RelativeLayout>


</layout>
