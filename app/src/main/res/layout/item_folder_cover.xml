<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="folder"
            type="com.xter.pickit.entity.LocalMediaFolder" />

        <variable
            name="photoVM"
            type="com.xter.pickit.ui.album.PhotoAlbumViewModel" />
    </data>

    <com.xter.pickit.ui.widget.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <ImageView
            android:id="@+id/iv_folder_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/img_desc_cover"
            android:visibility="visible" />

        <com.xter.pickit.ui.widget.ImageContainer
            android:id="@+id/gic_folder_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:column="2"
            app:mode="grid"
            app:padding="1dp"
            app:row="2" />

        <TextView
            android:id="@+id/tv_folder_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@{String.valueOf(folder.imageNum)}"
            android:textColor="@color/purple"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_folder_count"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{folder.name}"
            android:textColor="@color/purple"
            android:textSize="14sp" />
    </com.xter.pickit.ui.widget.SquareRelativeLayout>
</layout>
