<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="group"
            type="com.xter.pickit.entity.LocalMediaGroup" />

        <variable
            name="photoGroupVM"
            type="com.xter.pickit.ui.group.PhotoGroupViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xter.pickit.ui.widget.SquareRelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <ImageView
                android:id="@+id/iv_group_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/img_desc_cover"
                android:visibility="visible" />
        </com.xter.pickit.ui.widget.SquareRelativeLayout>

        <TextView
            android:id="@+id/tv_group_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/rl_image"
            android:text="@{String.valueOf(group.imageNum)}"
            android:textColor="@color/purple" />

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_group_count"
            android:layout_toEndOf="@id/rl_image"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{group.name}"
            android:textColor="@color/purple" />
    </RelativeLayout>


</layout>
